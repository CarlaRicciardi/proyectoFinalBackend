<section class='p-4 bg-light'>
  <header class='container-fluid' id='header'>
    <nav id='navbar'>
      <div class='container-fluid' style='margin-top:20px;'>
        <ul style='display:flex; flex-direction:row; justify-content:space-around;'>
          {{! <li class='btn-navbar' style='text-decoration:none; list-style-type:none;'>
            <button id='' class='link-navbar btn btn-outline-success'>
              <a href='/api/admin' class='text-decoration-none text-reset'>Administraci√≥n</a>
            </button>
          </li> }}
          <li class='btn-navbar' style='text-decoration:none; list-style-type:none;'>
            <form method='post' action='/api/cart'>
              <button type='submit' id='' class='link-navbar btn btn-outline-success'>
                Crear Carrito
              </button>
            </form>
          </li>
          <li class='btn-navbar' style='text-decoration:none; list-style-type:none;'>
            <button id='' class='link-navbar btn btn-outline-success'>
              <a href='/api/cart/{{user.cartActual}}/products' class='text-decoration-none text-reset'>Ver Carrito</a>
            </button>
          </li>
          {{! <li class='btn-navbar' style='text-decoration:none; list-style-type:none;'>
            <button class='link-navbar btn btn-outline-success'>
              <a href='/chat' class='text-decoration-none text-reset'>Chat de Soporte</a></button>
          </li> }}
        </ul>
      </div>
    </nav>
  </header>

  <h1 class='text-secondary text-center text-success'>Hola,
    {{user.name}}!</h1>

  <div class='mb-3'>
    <div>
      <label class='form-label fw-bold text-secondary fs-3' for='login'>Tus datos son:</label>
      <div>
        usuario:
        {{user.username}}
        <br />
        Nombre:
        {{user.name}}
        <br />
        Direccion:
        {{user.address}}
        <br />
        Edad:
        {{user.age}}
        <br />
        Telefono:
        {{user.phone}}
        <br />
        Imagen:
        {{user.url}}
      </div>
    </div>
    <br />
    <button type='button' class='btn btn-danger'><a href='./logout' class='text-decoration-none text-reset'>Salir</a></button>
    <br />
    {{! <button type='button' class='btn btn-outline-warning'><a href='/api/cart' style='text-decoration: none;'>Ir al carrito</a></button> }}
  </div>
</section>

<br />
<h1 class='text-secondary text-center'>Listado de productos</h1>
<div class='container mt-5 d-flex justify-content-between flex-wrap'>
  {{#if products}}
    {{#each products}}
      <div class='card m-5' style='width:18rem'>
        <img src='{{this.thumbnail}}' class='card-img-top' alt={{this.title}} />
        <div class='card-body d-flex flex-column justify-content-between'>
          <h5 class='card-title'>{{this.title}}</h5>
          <p class='card-text'>Precio por kg: ${{this.price}}</p>
        </div>
        <form method='post' action='/api/cart/{{this.cartActual}}/products'>
          <select name='units' id='units'>
            <option value='1'>0,5kg</option>
            <option value='2'>1kg</option>
            <option value='3'>2kg</option>
          </select>
          <button class='btn btn-success w-100'>Agregar al carrito</button>
        </form>
      </div>

    {{/each}}
  {{else}}
    <h1 class='text-center'>No se encontraron productos</h1>
  {{/if}}
</div>

<br />
<br />
<br />
