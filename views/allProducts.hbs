<section class='p-4 bg-light'>
  <h1 class='text-secondary text-center text-success'>Bienvenido
    {{user.name}}</h1>

  <div class='mb-3'>
    <div>
      <label class='form-label fw-bold text-secondary fs-3' for='login'>Tus datos son:</label>
      <div>
        usuario:
        {{user.username}}
        <br />
        Nombre:
        {{user.name}}
        <br />
        Direccion:
        {{user.address}}
        <br />
        Edad:
        {{user.age}}
        <br />
        Telefono:
        {{user.phone}}
        <br />
        Imagen:
        {{user.url}}
      </div>
    </div>
    <br />
    <button type='button' class='btn btn-outline-danger'><a href='./logout' style='text-decoration: none;'>Salir</a></button>
  </div>
</section>

<br />
<h1 class='text-secondary text-center'>Listado de productos</h1>
<div class='container mt-5 d-flex justify-content-between flex-wrap'>
  {{#if products}}
    {{#each products}}
      <div class='card m-5' style='width:18rem'>
        <img src='{{this.thumbnail}}' class='card-img-top' alt={{this.title}} />
        <div class='card-body d-flex flex-column justify-content-between'>
          <h5 class='card-title'>{{this.title}}</h5>
          <p class='card-text'>Precio por kg: ${{this.price}}</p>
        </div>
        <form class='mb-0' action='/carrito/{{this._id}}' method='POST'>
          <button class='btn btn-success w-100'>Agregar al carrito</button>
        </form>
      </div>

    {{/each}}
  {{else}}
    <h1 class='text-center'>No se encontraron productos</h1>
  {{/if}}
</div>

<br />
<br />
<br />
<br />

<form class='mb-0' action='/api/addProd' method='POST'>
  <button class='btn btn-success w-100'>Agregar un producto</button>
</form>